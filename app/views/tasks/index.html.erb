<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task), class: "link" %></li>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>

  <%= link_to "Create a task", new_task_path, class: "btn btn-primary" %>
